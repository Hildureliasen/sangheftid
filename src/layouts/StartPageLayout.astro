---
import StartHeader from "../components/StartHeader.astro";
import Footer from "../components/Footer.astro";
import '../styles/tailwind.css';
import 'animate.css';
const { title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Kalnia:wght@100..700&display=swap">
    <link rel="stylesheet" href="/path/to/your/tailwind.css">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
	</head>
	<body class="min-h-screen flex flex-col pt-10 bg-tekst-primary-beige">
		<header class="z-50">
			<StartHeader></StartHeader>
		</header>

		<main class="flex-grow">
			<slot />
		</main>

		<footer class="mt-auto pb-16 text-center">
			<Footer></Footer>
		</footer>
	</body>
</html>
