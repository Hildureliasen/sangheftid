---
import MainLayout from "../layouts/MainLayout.astro";
import StartPageLayout from "../layouts/StartPageLayout.astro";
---

<StartPageLayout title="Titel">
  <article>
    <!DOCTYPE html>
    <html lang="da">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Titel</title>
      <link href="/path/to/your/tailwind.css" rel="stylesheet" />
      <style>
        /* Ensure body has no margins or paddings */
        body {
          margin: 0;
          padding: 0;
          height: 100vh;
          overflow: hidden;
          position: relative;
          background-image: url('/bg.svg');
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
        }
        .full-screen-img {
          position: absolute; /* Absolute positioning to stay fixed in viewport */
          top: 0;
          left: 0;
          width: 100vw; /* Full viewport width */
          height: 100vh; /* Full viewport height */
          z-index: -1; /* Place behind other content */
        }
        .content {
          position: relative;
          z-index: 10;
          max-width: 75%;
          margin: auto; /* Center horizontally */
          text-align: center;
          padding: 20px; /* Optional padding */
        }
        .scrollable {
          max-height: 60vh; /* Set the max height of the scrollable area */
          overflow-y: auto;
          background-color: rgba(250, 241, 228, 0.388); /* Optional background for better readability */
          padding: 10px;
          border-radius: 3px; /* Rounded corners */
          margin: 0 auto;
          position: relative; /* For the 3D effect */
  }

        /* Webkit scrollbar styles */
        .scrollable::-webkit-scrollbar {
          width: 10px; /* Width of the scrollbar */

        }
        .scrollable::-webkit-scrollbar-thumb {
          background: #d2681d50; /* Orange color for the thumb */
          border-radius: 3px;
        }
        .scrollable::-webkit-scrollbar-thumb:hover {
          background: #e65c00; /* Darker orange on hover */
        }

        .song-link {
          display: block;
          margin: 10px 0;
          padding: 10px;
          text-decoration: none;
          color: #333; /* Adjust text color */
          font-weight: 500; /* Font weight */
          transition: background-color 0.3s; /* Smooth background transition */
        }
        .song-link:hover {
          background-color: rgba(0, 0, 0, 0.1); /* Change background on hover */
        }
      </style>
    </head>
    <body class="font-sans">
      <img src="sidu.svg" alt="" class="full-screen-img px-3">
      <div class="content">
        <h1 class="text-center font-kalnia text-tekst-primary-orange font-medium text-4xl mb-6">Sangheftið</h1>
        <div class="scrollable">
          <div class="text-left pl-5 ">
            <a href="/1_1001natt" class="song-link">1. 1001 nátt</a>
            <a href="/2_angels" class="song-link">2. Angels</a>
            <a href="/3_a_trappuni_hja_lenu" class="song-link">3. Á trappuni hjá Lenu</a>
            <a href="/4_ah_kundi_a_tidarhavi" class="song-link">4. Áh kundi á tíðarhavi</a>
            <a href="/5_california_dreamin" class="song-link">5. California dreamin</a>
            <a href="/6_dansen_pa_sunnano" class="song-link">6. Dansen på Sunnanø</a>
            <a href="/7_dimmid" class="song-link">7. Dimmið</a>
            <a href="/8_dupultsong" class="song-link">8. Dupultsong</a>
            <a href="/9_eg_fari_min_egna_veg" class="song-link">9. Eg fari mín egna veg</a>
            <a href="/10_einki_er_sum_summarkvøld" class="song-link">10. Einki er sum summarkvøld </a>
            <a href="/11_eitt_sunnukvold_i_plantasjuni" class="song-link">11. Eitt sunnukvøld í plantasjuni </a>
            <a href="/12_eros" class="song-link">12. Eros</a>
            <a href="/13_handan_mjorkan" class="song-link">13. Handan mjørkan</a>
            <a href="/14_herbergid" class="song-link">14. Herbergið</a>
            <a href="/15_i_simri" class="song-link">15. Í sirmi</a>
            <a href="/16_litli_fuglur" class="song-link">16. Lítli fuglur</a>
            <a href="/17_sangur_til_frælsi" class="song-link">17. Sangur til Frælsi</a>
            <a href="/18_seinasta_vaktin" class="song-link">18. Seinasta vaktin</a>
            <a href="/19_surligar_nætur_i_keypmannahavn" class="song-link">19. Súrligar nætur í Keypmannahavn</a>
