        /* Ensure body has no margins or paddings */
        body {
          margin: 0;
          padding: 0;
          height: 100vh;
          overflow: hidden;
          position: relative;
          background-image: url('/bg.svg');
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
        }
        .full-screen-img {
          position: absolute; /* Absolute positioning to stay fixed in viewport */
          top: 0;
          left: 0;
          width: 100vw; /* Full viewport width */
          height: 100vh; /* Full viewport height */
          /* object-fit: cover; Cover the entire viewport without distortion */
          z-index: -1; /* Place behind other content */
        }
        .content {
          position: relative;
          z-index: 10;
          max-width: 80%;
          margin: auto; /* Center horizontally */
          text-align: center;
          padding: 20px; /* Optional padding */
        }
        .scrollable {
          max-height: calc(100vh - 100px); /* Adjust as necessary */
          overflow-y: auto;
        }
      </style>
