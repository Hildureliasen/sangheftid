---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
---

<MainLayout title="Titel">
  <article>
    <!DOCTYPE html>
    <html lang="da">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Titel</title>
      <link href="/path/to/your/tailwind.css" rel="stylesheet" />
      <style>
        /* Tilføj følgende CSS til at sætte SVG som baggrundsbillede */
        body {
          background-image: url('/bg.svg');
          background-size: cover; /* Tilpasser baggrunden til at dække hele skærmen */
          background-position: center; /* Centrerer baggrunden */
          background-repeat: no-repeat; /* Forhindrer gentagelse af baggrunden */
          margin: 0;
          padding: 0;
          height: 100vh;
          overflow: hidden;
        }
        .full-screen-img {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          object-fit: cover; /* Ensures the image covers the whole area */
        }
      </style>
    </head>
    <body class="m-0 p-0 font-sans">
      <div>
        <img src="pynt.svg" alt="" class="full-screen-img p-2">
      </div>
      <div class="pt-28 relative z-10">
        <h1 class="text-center font-kalnia text-tekst-primary-orange font-medium text-4xl">Sangheftið</h1>
      </div>
      <div class="p-4 flex justify-center w-full relative z-10">
        <div class="text-left">
          <a href="/sang1" class="block my-2 py-2 px-4 text-tekst-primary-brun font-medium"> 1. Tað er leygarkvøld</a>
          <a href="/sang2" class="block my-2 py-2 px-4 text-tekst-primary-brun font-medium"> 2. Jeg er så glad</a>
          <a href="/sang3" class="block my-2 py-2 px-4 text-tekst-primary-brun font-medium"> 3. _</a>
          <a href="/sang4" class="block my-2 py-2 px-4 text-tekst-primary-brun font-medium"> 4. _</a>
          <a href="/sang5" class="block my-2 py-2 px-4 text-tekst-primary-brun font-medium"> 5. Skuld gammel venskab</a>
        </div>
      </div>
    </body>
    </html>
  </article>
</MainLayout>


